@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewBag.Title = "Login";
}


<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">

            <h1 class="text-center login-title" style="font-size: 50px; font-family: 'Times New Roman';">Piazza Login</h1>
            <div>
                @if (ViewBag.loginMessage != null)
                { 
                    <label style="color:red;">@ViewBag.loginMessage </label>
                }
                <form method="post" action="/Account/Authenticate">
                    <br />

                    <div class="form-group">
                        <label for="fname">Email or Username </label>
                        <input type="email" class="form-control" placeholder="Email" name="email" required autofocus><br />
                    </div>
                    <div class="form-group">
                        <label for="fname">Password </label>
                        <input type="password" class="form-control" placeholder="Password" name="password" required><br />
                    </div>

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in </button>
                    <br />

                </form>
            </div>
            <a href="/Account/SignUp" class="text-center new-account">Not a member Register Now </a>
        </div>
    </div>
</div>
